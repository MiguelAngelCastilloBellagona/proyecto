<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           				http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
           			    http://www.springframework.org/schema/tx
            			http://www.springframework.org/schema/tx/spring-tx-4.1.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context.xsd">
    
	<!-- Enable usage of @Autowired. -->
	<context:annotation-config />

	<!-- Enable component scanning for defining beans with annotations. -->
	<context:component-scan base-package="es.ficonlan.web.api.model" />
	
	<bean id="C3P0-dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close" > 
		<property name="driverClass" value="com.mysql.jdbc.Driver"/>				<!-- JdbcDriver-->
		<property name="jdbcUrl" value="jdbc:mysql://localhost:3306/ficondb"/>		<!-- db url-->
		<property name="user" value="ficonuser"/>									<!-- db user-->
		<property name="password" value="ficonpass"/>								<!-- db password-->
		<property name="acquireIncrement" value="1"/>								<!-- Number of connections in which increases the poll when this is full and a new connection is requested -->
		<property name="acquireRetryDelay" value="4500"/>							<!-- Minimum time to order new connections MILI-SECONDS-->
		<property name="autoCommitOnClose" value="false" />							<!-- Enable autoCommit -->
		<property name="initialPoolSize" value="10"/>								<!-- initialPoolSize -->
		<property name="minPoolSize" value="10"/>									<!-- minPoolSize -->
		<property name="maxPoolSize" value="75"/>									<!-- maxPoolSize -->
		<property name="maxIdleTime" value="3600"/>									<!-- Minimum time that must be an idle connection to turn it off SECONDS -->
		<property name="maxConnectionAge" value="7200" />							<!-- Maximum time you have to be an idle connection to turn it off SECONDS -->
		<property name="maxIdleTimeExcessConnections" value="1800"/>				<!-- Minimum life time of a connection SECONDS -->
		<property name="preferredTestQuery" value="select 1 from DUAL"/>			<!-- Query to test the pool -->
		<property name="idleConnectionTestPeriod" value="180"/>						<!-- Test the idle connections every SECONDS -->
		<property name="testConnectionOnCheckin" value="true" />					<!-- Test connections on create -->
		<property name="testConnectionOnCheckout" value="false" />					<!-- Test connections on destroy -->
	</bean>
	
	
	<!-- Hibernate Session Factory -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="C3P0-dataSource" /> 
		<property name="configLocation" value="hibernate-config.xml" />
	</bean>

	<tx:annotation-driven transaction-manager="transactionManager" />

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<!-- Spring Application Context Provider to use from Jersey Resources -->
	<bean id="applicationContextProvider"
		class="es.ficonlan.web.api.jersey.util.ApplicationContextProvider"></bean>

</beans>